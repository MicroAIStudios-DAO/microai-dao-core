# MicroAI DAO Security Configuration
# ====================================
# Additional security-specific environment variables

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars-random
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days in seconds

# Cryptographic Keys
SIGNING_KEY=your-signing-key-min-32-chars-random
HMAC_SECRET=your-hmac-secret-min-32-chars-random

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_STORAGE=redis  # or 'memory'

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# Security Headers
ENABLE_SECURITY_HEADERS=true
CSP_POLICY=default-src 'self'

# Database Security
DB_SSL_MODE=require  # for production
DB_CONNECTION_TIMEOUT=30

# API Security
API_KEY_PREFIX=mk_
API_KEY_LENGTH=32
API_KEY_EXPIRY_DAYS=365

# Monitoring
ENABLE_REQUEST_LOGGING=true
LOG_SENSITIVE_DATA=false
SENTRY_DSN=

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_API_KEYS=true
ENABLE_TRUST_STACK=true
ENABLE_2FA=false  # planned feature
